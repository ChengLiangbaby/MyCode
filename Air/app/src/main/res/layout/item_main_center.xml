<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="5dp">
    <TextView
        android:id="@+id/iten_center_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周六"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/iten_center_tv_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="晴"
        android:layout_toRightOf="@+id/iten_center_tv_date"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/iten_center_tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9~-1℃"
        android:layout_alignParentRight="true"
        android:textSize="16sp"/>
   <ImageView
       android:id="@+id/iten_center_iv"
       android:layout_toLeftOf="@+id/iten_center_tv_temp"
       android:layout_marginRight="10dp"
       android:src="@mipmap/icon_add"
       android:layout_width="20dp"
       android:layout_height="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/iten_center_tv_date"/>
</RelativeLayout>